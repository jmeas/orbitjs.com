header
  display flex
  height 60px
  line-height 60px
  border-bottom 1px solid #ccc
  margin-bottom 25px
  
  h1
    font-size 23px
    margin 0 40px 0 0
    padding 0
    
    a
      color #000
  
  ul
    display flex
    
  li
    margin 0 10px
    
    &:first-child
      margin-left 0
      
    &:last-child
      margin-right 0
      
  a
    color #666
    
  li.active a
    color #000
    font-weight bold
    

